<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="200" vgap="100" fx:controller="IntroController">
    <!-- Title -->
    <Label text="Welcome to Umbrella Board Game!" 
           style="-fx-font-size: 48px;" 
           GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
    
    <!-- Instructions -->
    <Label text="Push tokens to arrange colors in rows or columns." 
           style="-fx-font-size: 40px;" 
           GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
    
    <!-- Buttons Container -->
    <VBox alignment="CENTER" spacing="20" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <Button text="Start Game" onAction="#onStartGameClicked" style="-fx-font-size: 30px;"/>
        <Button text="Instructions" onAction="#onInstructionsClicked" style="-fx-font-size: 30px;"/>
    </VBox>
</GridPane>