<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10" fx:controller="IntroController">
    <Label text="Welcome to Umbrella Board Game!" style="-fx-font-size: 24px;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label text="Push tokens to arrange colors in rows or columns." 
           style="-fx-font-size: 16px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Start Game" onAction="#onStartGameClicked" 
            style="-fx-font-size: 16px;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Instructions" onAction="#onInstructionsClicked" 
            style="-fx-font-size: 16px;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
</GridPane>
