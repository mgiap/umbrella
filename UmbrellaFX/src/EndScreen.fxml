<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="20" fx:controller="EndScreenController" stylesheets="@styles.css"
      prefWidth="800" prefHeight="600">
    <Label fx:id="congratulationsLabel" text="Congratulations!" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>
    <Label fx:id="scoreLabel" text="Your Score: 0" style="-fx-font-size: 24px;"/>
    <Button text="Play Again" onAction="#onPlayAgainClicked" style="-fx-font-size: 18px;"/>
</VBox>
