<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane maxHeight="850.0" maxWidth="1300.0" prefHeight="850.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="InstructionController">
    <content>
        <VBox id="InstructionBackground" fx:id="InstructionBackground" prefHeight="1070.0" prefWidth="1374.0" stylesheets="@styles.css">
            <children>
                <Button onAction="#onBackClicked" styleClass="pixelFontButton" stylesheets="@styles.css" text="Back" />
                
                <Label style="-fx-font-size: 35px; -fx-font-family: 'Pixelify Sans SemiBold';" text="I. Objective" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Collect Hearts by matching patterns on 4 Pattern Squares at the top." wrapText="true" />
                
                <Label style="-fx-font-size: 35px; -fx-font-family: 'Pixelify Sans SemiBold';" text="II. Setup" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- The Main Board is a 4x4 grid with random tokens of 4 types." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Four Token Boards surround the Main Board. Each has 5 random tokens." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- The Score Board stores Hearts above the Main Board." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- The Pattern Query at the top shows 6 patterns in 2 columns." wrapText="true" />
                
                <Label style="-fx-font-size: 35px; -fx-font-family: 'Pixelify Sans SemiBold';" text="III. How to Push" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Select a token from your Token Board." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Pick the row or column on the Main Board to push the token." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Click Confirm to push. Tokens shift, and the last token is removed." wrapText="true" />
                
                <Label style="-fx-font-size: 35px; -fx-font-family: 'Pixelify Sans SemiBold';" text="IV. How to Score" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Match patterns from the Pattern Query by pushing tokens." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Place a Heart on the Score Board for each completed pattern." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Combos give bonus points: 3 for small and 5 for large combos." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Flip completed patterns to the black side. Remove them after another match." wrapText="true" />
                
                <Label style="-fx-font-size: 35px; -fx-font-family: 'Pixelify Sans SemiBold';" text="V. How to End" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- The game ends when no tokens are left to push." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Leftover tokens on the board grant bonus points for large groups." wrapText="true" />
                
                <Label style="-fx-font-size: 35px; -fx-font-family: 'Pixelify Sans SemiBold';" text="VI. Tips for Success" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Plan moves to complete multiple patterns at once." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Look for combos to boost your score." wrapText="true" />
                <Label style="-fx-font-size: 25px; -fx-font-family: 'Pixelify Sans';" text="- Manage Token Boards to avoid running out of options." wrapText="true" />
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
